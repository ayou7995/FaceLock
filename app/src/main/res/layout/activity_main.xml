    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayou7995.facelock.MainActivity">

    <SurfaceView android:id="@+id/svPreview"
        android:visibility="visible"
        android:layout_width="match_parent"
